@model ProfileViewModel;

@{
    ViewData["Title"] = "Профиль";
}

<div class="container-fluid d-flex h-75 justify-content-center align-items-center">
    <div class="row bg-white shadow-sm">
        <div class="col border rounded p-4" style="width:800px;">
            @if (!Model.IsAccountConnected) {
                <div class="row">
                    <div class="col-sm-5"></div>
                    <div class="col-sm-2">
                        <form method="get" asp-action="LinkAccount" asp-controller="Profile" asp-antiforgery="true">
                            <button class="btn btn-circle">
                                <i class="fa fa-vk"></i>
                            </button>
                        </form>
                    </div>
                    <div class="col-sm-5"></div>
                </div>
                <div class="row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        <h3 class="text-center">Нет привязанного аккаунта</h3>
                    </div>
                    <div class="col-sm-2"></div>
                </div>
            } else {
                <div class="row">
                    <div class="col-sm-5"></div>
                    <div class="col-sm-2">
                        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Avatar))" class="rounded-circle img-circle" />
                    </div>
                    <div class="col-sm-5"></div>
                </div>
            }
            <div class="row">
                <div class="col-sm-12">
                    <table class="table">
                        <tr>
                            <th>Аккаунт</th>
                            <th>Подключено сообществ</th>
                            <th>Готовые шаблоны</th>
                        </tr>
                        <tr>
                            <td>@Model.Name</td>
                            <td>@Model.CommunityConnectedCount</td>
                            <td>@Model.CountTemplate</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


