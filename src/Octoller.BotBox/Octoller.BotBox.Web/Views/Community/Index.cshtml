@model IEnumerable<CommunityViewModel>;

@{
    ViewData["Title"] = "Сообщества";
}

<div class="container-fluid d-flex h-75 justify-content-center align-items-center">
    <div class="row bg-white shadow-sm">
        <div class="col border rounded p-4" style="width:800px;">
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    <h3 class="text-center">Подключение сообществ</h3>
                    <p class="text-center">Выберите сообщества, которые хотите подключить к BotBox:</p>
                </div>
                <div class="col-sm-2"></div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <form>
                        <div class="list-group">
                            @foreach (var g in Model) {
                                
                                <div class="form-control list-group-item list-group-item-action list-group-item-light">
                                    <div class="input-group mb-auto">
                                        <div class="input-group-text">
                                            <input class="form-check mt-0" type="checkbox" value="" aria-label="Флажок">
                                        </div>
                                        <div class="media">
                                            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(g.Photo))" class="rounded-circle img-circle-community" alt="@g.Name">
                                            <div class="media-body">
                                                <h5>@g.Name</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>